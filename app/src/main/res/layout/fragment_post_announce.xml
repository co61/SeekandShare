<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundsearch">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/yellowBackground"
            android:orientation="vertical">

            <EditText
                android:id="@+id/post_title_txt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/corner"
                android:hint="Titre..."
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textCursorDrawable="@color/black"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/post_place_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/corner"
                android:hint="Ville..."
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textCursorDrawable="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/post_content_txt"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/corner"
                android:gravity="start"
                android:hint="Décrivez votre annonce..."
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:textAlignment="viewStart"
                android:textCursorDrawable="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:background="@color/yellowBackground"
                android:text="@string/caract_number"
                android:id="@+id/caractnb"

                />



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/post_DP_radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/post_demande_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Demande" />

                        <RadioButton
                            android:id="@+id/post_propostion_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proposition" />

                    </RadioGroup>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/post_SP_radioGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/post_service_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service" />

                        <RadioButton
                            android:id="@+id/post_pret_radio"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Prêt" />


                    </RadioGroup>
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/validate_post_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:padding="15dp"
                android:layout_marginTop="10dp"
                android:text="Poster mon annonce"
                android:textColor="@color/white"/>

        </LinearLayout>

</ScrollView>